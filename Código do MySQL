create database SDA;
use SDA;

create table tb_usuario (
id int primary key auto_increment, 
login varchar(200), 
senha varchar(200));
insert into tb_usuario (login, senha)
values ('admin', 'admin');

create table tb_denuncias (
id int primary key auto_increment,
estado varchar (200),
cidade varchar (200),
referencia varchar (200),
categoria_denuncia varchar(200),
descricao varchar(9999)
);
insert into tb_denuncias (estado,cidade,referencia,categoria_denuncia, descricao)
values ('São Paulo','Campinas','Parque ecológico de Campinas','Incêndios Florestais', 'Eu estava caminhando pelo parque estadual ontem à tarde quando 
notei uma fumaça densa no horizonte. As árvores estavam sendo consumidas pelo fogo rapidamente, e os animais pareciam 
estar fugindo em pânico. Era evidente que o incêndio estava se espalhando de forma descontrolada.');

create table tb_cadastro (
id int primary key auto_increment,
nome varchar(200),
numero char(12),
email varchar(200)
);
insert into tb_cadastro (nome, numero, email)
values ('João Silva', '1191234-5678', 'joao.silva@SDA.com');

delete from tb_cadastro where id = 14;
drop table tb_denuncias;
select * from tb_cadastro;
select * from tb_denuncias;
INSERT INTO tb_cadastro (nome) values ("Anônimo");

UPdAtE tb_denuncias set estado = 'a', cidade = 'b', referencia = 'c', categoria_denuncia = 'd', descricao = 'e' WHERE id = 4;
